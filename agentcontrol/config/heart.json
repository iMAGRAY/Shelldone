{
  "index_dir": "context/heart",
  "chunk_chars": 1200,
  "chunk_overlap": 200,
  "max_file_bytes": 524288,
  "include_globs": [
    "**/*.py",
    "**/*.rs",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.sh",
    "**/*.md",
    "**/*.yaml",
    "**/*.yml",
    "**/*.json"
  ],
  "exclude_globs": [
    "vendor/**",
    "scripts/bin/**",
    "scripts/__pycache__/**",
    "node_modules/**",
    ".git/**",
    ".venv/**",
    "context/heart/**",
    "reports/**",
    "sbom/**"
  ],
  "stop_words": ["the", "and", "for", "from", "with", "this", "that", "into", "about", "shall", "should", "todo"],
  "top_k": 6,
  "max_results": 10
}
