{
  "default_role": "Principal Delivery Engineer",
  "log_dir": "reports/agents",
  "context": {
    "max_snippet_chars": 320,
    "top_k_chunks": 6
  },
  "agents": {
    "codex": {
      "command": [
        "scripts/bin/codex",
        "exec",
        "--sandbox",
        "workspace-write",
        "--ask-for-approval",
        "on-request"
      ],
      "stdin": true,
      "owner": "codex-bot",
      "sandbox": "auto",
      "auth_command": [
        "scripts/bin/codex",
        "auth",
        "login"
      ],
      "credentials_paths": [
        "state/agents/codex-home",
        "~/.codex",
        "~/.config/codex",
        "~/.cache/codex"
      ]
    },
    "claude": {
      "command": [
        "scripts/bin/claude"
      ],
      "stdin": true,
      "owner": "claude-bot",
      "sandbox": "auto",
      "auth_command": [
        "scripts/bin/claude",
        "login"
      ],
      "credentials_paths": [
        "state/agents/claude-config",
        "~/.claude",
        "~/.config/anthropic",
        "~/.config/claude"
      ]
    }
  },
  "workflows": {
    "default": {
      "assign_agent": "codex",
      "assign_role": "Implementation Lead",
      "review_agent": "claude",
      "review_role": "Staff Reviewer",
      "assign_args": {
        "--sandbox": "workspace-write",
        "--ask-for-approval": "on-request"
      }
    }
  },
  "default_agent": "codex"
}
