{
    "app-id": "net.shelldone.terminal",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "shelldone",
    "finish-args": [
        "--share=ipc",
        "--filesystem=home:ro",
        "--filesystem=xdg-config/shelldone",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=org.freedesktop.Notifications",
        "--share=network"
    ],
    "build-options": {
        "append-path" : "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [
        {
            "name": "shelldone",
            "buildsystem": "simple",
            "build-options": {
                "env": {
                    "CARGO_HOME": "/run/build/shelldone/cargo"
                }
            },
            "build-commands": [
                "cargo --offline fetch --manifest-path Cargo.toml --verbose",
                "cargo --offline build --release --verbose",
                "mkdir -p /app/share/icons/hicolor/128x128/apps/",
                "cp ./assets/icon/terminal.png /app/share/icons/hicolor/128x128/apps/net.shelldone.terminal.png",
                "mkdir -p /app/share/metainfo/",
                "cp ./assets/shelldone.appdata.xml /app/share/metainfo/net.shelldone.terminal.appdata.xml",
                "mkdir -p /app/share/applications/",
                "cp ./assets/shelldone.desktop /app/share/applications/net.shelldone.terminal.desktop",
                "install -Dm755 ./target/release/shelldone -t /app/bin/",
                "install -Dm755 ./target/release/shelldone-gui -t /app/bin/",
                "install -Dm755 ./target/release/shelldone-mux-server -t /app/bin/",
                "install -Dm755 ./target/release/strip-ansi-escapes -t /app/bin/",
                "install -Dm644 assets/shell-integration/* -t /app/extra/export/share/etc/profile.d",
                "install -Dm644 assets/shell-completion/zsh /app/extra/export/share/zsh/site-functions/_shelldone",
                "install -Dm644 assets/shell-completion/bash /app/extra/export/share/etc/bash_completion.d/shelldone"
              ],
            "sources": [
                {
                    "type": "dir",
                    "path": "../.."
                },
                "generated-sources.json"
            ]
        }
    ]
}
